import csv
import easygui as eg

def doneornot():
    return eg.ccbox("Would you like to *?","System Message",["Yes","No"])

reader = csv.reader(open("test.csv", "rb"))

string = ""
read_file = []
names = []
grades = []
courses = []

for row in reader:
    read_file.append(row)
    for i in range(len(row)):
        if i == 0:
            names.append(row[i])
        if i == 1:
            grades.append(row[i])
        if i == 2:
            courses.append(row[i])
    for word in row:        
        print word,
    print '\n'

##Pop all labels from the lists
names.pop(0)
grades.pop(0)
courses.pop(0)
###############################

##Updated shit
def find_student_in_grade(grade):
    students_searched = 0
    ##Find all students in specified grade    
    for i in range(len(grades)):        
        if grades[i] == grade:
            print names[i]
        else:
            students_searched += 1
    if students_searched == len(grades):
        print "No students found in grade", grade
        
def find_student_in_course(course):
    students_searched = 0
    ##Find all students in specified course
    for i in range(len(courses)):
        if courses[i] == course:
            print names[i]
        else:
            students_searched += 1
    if students_searched == len(courses):
        print "No students found in course", course

def display_all(data):
    if data == "students" or data == "Students":
        print names
    if data == "grades" or data == "Grades":
        print grades
    if data == "courses" or data == "Courses":
        print courses

def enter_new_student(name,grade,course):
    row_to_write = [name, grade, course]
    read_file.append(row_to_write)
    writer = csv.writer(open("test.csv", "wb"))
    for row in read_file:
        writer.writerow(row)
